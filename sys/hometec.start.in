#!/bin/sh
# Usage: hometec.start [args]
#
PIPE_DIR=/tmp/start/
ERLANG_LOGDIR=/tmp/start
ROOTDIR=/usr/lib/erlang
BINDIR=$ROOTDIR/erts-@ERLANG_ERTS_VER@/bin

mkdir -p $ERLANG_LOGDIR

run_cmd="$BINDIR/erl\
        -boot /etc/hometec.d/hometec\
        -config /etc/hometec.d/hometec\
        -sname hometec\
        -setcookie hometec $@"

$BINDIR/run_erl -daemon $PIPE_DIR $ERLANG_LOGDIR "exec $run_cmd"